---
import type { CollectionEntry } from "astro:content";

import ContentSurface from "@ui/base/ContentSurface.astro";
import LinkButton from "@ui/base/LinkButton.astro";
import Stack from "@ui/base/Stack.astro";
import Typography from "@ui/base/Typography.astro";

interface Props {
  category: CollectionEntry<"categories">;
  populations: Array<CollectionEntry<"populations">>;
}

const props = Astro.props;
---

<ContentSurface variant="tertiary" paddingY={3} paddingX={5}>
  <Stack spacing={2}>
    <Typography as="h2" variant="title-4">{"Underserved Groups"}</Typography>
    <Typography>
      {
        `We've identified resources in this topic that are more centered to the unique needs and perspectives of the following communities.`
      }
    </Typography>
    <ul class="flex flex-wrap gap-4">
      {
        props.populations.map((p) => (
          <LinkButton
            colorVariant="tertiary"
            to={`/${props.category.data.slug}/${p.data.slug}`}
            label={p.data.name}
          />
        ))
      }
    </ul>
  </Stack>
</ContentSurface>
