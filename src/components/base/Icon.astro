import { assertNever } from "@ui/utils/ts-utils";

type ColorVariantMap = Record<OnSurfaceColorVariant, Array<string>>;
type IconSize = 1 | 2 | 3;

const colorVariantMap: ColorVariantMap = {
  coolNeutral: ["stroke-line-coolNeutral--default"],
  warmNeutral: ["stroke-line-warmNeutral--default"],
  primary: ["stroke-line-primary--prominent"],
  secondary: ["stroke-line-secondary--prominent"],
  tertiary: ["stroke-line-tertiary--prominent"],
  primaryContrast: ["stroke-line-primaryContrast--default"],
};

const sizeMap: Record<IconSize, string> = {
  // todo - match to text sizes
  1: "size-4",
  2: "size-5",
  3: "size-6",
};

interface Props {
  getIcon: (icons: typeof iconMap) => IconMapValue;
  colorVariant?: OnSurfaceColorVariant;
  size?: IconSize;
  display?: "block" | "inline";
}

const { getIcon, colorVariant, size, display } = Astro.props;

const icon = getIcon(iconMap);

const classes = [
  sizeMap[size ?? 2],
  display,
  display === "inline" && "inline align-middle",
  display === "block" && "block",
  colorVariant
    ? (colorVariantMap[colorVariant] ?? "stroke-current")
    : "stroke-current",
];
