---
import {
  paddingXSettingMap,
  paddingYSettingMap,
  type SpaceSetting,
} from "@styles/utils/spacing";

type ContainerSize = 1 | 2;

interface Props {
  size?: ContainerSize;
  paddingX?: SpaceSetting;
  paddingY?: SpaceSetting;
  additiveClasses?: string[];
}

const containerSizeToTWClass: Record<ContainerSize, string> = {
  1: "max-w-4xl",
  2: "max-w-6xl",
};

const { size, paddingX, paddingY, additiveClasses } = Astro.props;
---

<div
  class:list={[
    "mx-auto",
    containerSizeToTWClass[size ?? 1],
    paddingX ? paddingXSettingMap[paddingX] : null,
    paddingY ? paddingYSettingMap[paddingY] : null,
    ...(additiveClasses ?? []),
  ]}
>
  <slot />
</div>
