---
import type { SanityImage } from "@content/model/image";
import LayoutSurface, {
  type LayoutSurfaceVariantKey,
} from "@ui/base/LayoutSurface.astro";
import SanityImageComp from "@ui/base/SanityImage.astro";
import type { SurfaceColorVariant } from "src/components/utils/styles";

interface Props {
  surfaceVariant: SurfaceColorVariant;
  surfaceVariantKey: LayoutSurfaceVariantKey;
  image: SanityImage | null;
}

const props = Astro.props;
---

<LayoutSurface
  as="header"
  variant={props.surfaceVariant}
  variantKey={props.surfaceVariantKey}
>
  <div class="md:grid md:grid-cols-2 md:min-h-100">
    <div class="md:order-2 md:relative">
      <SanityImageComp
        classList={["md:absolute md:inset-0 md:h-full md:w-full"]}
        objectFit="cover"
        image={props.image}
      />
    </div>
    <div class="md:order-1">
      <slot />
    </div>
  </div>
</LayoutSurface>
