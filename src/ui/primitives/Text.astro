---
import type { Polymorphic } from "astro/types";
import { textSizeMap, type TextSize } from "@styles/semantic-token-map";

type TextElement = "p" | "span";

interface TextOwnProps {
  as: TextElement;
  size?: TextSize;
  textAlign?: "center" | "left";
}

type Props = Polymorphic<TextOwnProps>;

const { as: Tag = "p", size = 2, textAlign = "left", ...attrs } = Astro.props;

const sizeClass = textSizeMap[size];
---

<Tag
  class:list={[
    sizeClass,
    "font-serif leading-relaxed",
    textAlign === "center" && "text-center",
  ]}
  {...attrs}
>
  <slot />
</Tag>
