---
import type { Polymorphic } from "astro/types";
import { headingSize, type HeadingSize } from "@styles/semantic-token-map";

type HeadingElement = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

interface HeadingOwnProps {
  as: HeadingElement;
  text: string;
  size: HeadingSize;
  textAlign?: "center" | "left";
}

type Props = Polymorphic<HeadingOwnProps>;

const {
  as: Tag = "h1",
  text,
  size,
  textAlign = "center",
  ...attrs
} = Astro.props;

const safeSize: HeadingSize = size;
const sizeClass = headingSize[safeSize];
---

<Tag
  class:list={[
    sizeClass,
    "font-bold font-serif",
    textAlign === "center" && "text-center",
  ]}
  set:text={text}
  {...attrs}
/>
