---
import { getImageUrlBuilder } from '@common/client';
import type { SanityImage } from '@model/image';


// Would likely have to change this once we finish issue #49
interface Props {
  images: SanityImage[]
};

const { images = [] } = Astro.props;

---

<div class:list={["mb-6 px-3"]}>
  <div class:list={["sm:flex sm:flex-wrap sm:justify-center"]}>
    {(images).map((image, index) => (
      <div
        class:list={[
          "sm:basis-1/2 lg:basis-1/3",
          {
            "hidden": index !== 0,
            "sm:block": index === 1,
            "lg:block": index >= 2
          }
        ]}
      >
        <img
          class="sm:p-3"
          src={getImageUrlBuilder(image.image).width(640).height(450).url()}
          alt={image.altText}
        />
      </div>
    ))}
  </div>
</div>