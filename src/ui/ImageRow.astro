---
import type { SanityImage } from "@model/image";

import CMSImage from "./primitives/CMSImage.astro";

// Would likely have to change this once we finish issue #49
interface Props {
  images: SanityImage[];
}

const { images = [] } = Astro.props;
---

<div class:list={["sm:flex sm:flex-wrap sm:justify-center"]}>
  {
    images.map((image, index) => (
      <div
        class:list={[
          "sm:basis-1/2 lg:basis-1/3",
          {
            hidden: index !== 0,
            "sm:block": index === 1,
            "lg:block": index >= 2,
          },
        ]}
      >
        <CMSImage
          image={image}
          maxWidth={640}
          classList={["object-cover aspect-4/3", "sm:p-3"]}
        />
      </div>
    ))
  }
</div>
