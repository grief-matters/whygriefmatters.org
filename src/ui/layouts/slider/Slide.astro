---
import {
  paddingXSettingMap,
  paddingYSettingMap,
  type PaddingSetting,
} from "@ui/utils/styles";

interface Props {
  paddingX?: PaddingSetting;
  paddingY?: PaddingSetting;
}

const { paddingX, paddingY } = Astro.props;
---

<div
  class:list={[
    "basis-xs shrink-0 grow snap-center",
    "overflow-hidden",
    paddingX ? paddingXSettingMap[paddingX] : null,
    paddingY ? paddingYSettingMap[paddingY] : null,
  ]}
>
  <slot />
</div>
