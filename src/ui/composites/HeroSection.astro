---
interface Props {
  imageUrl: string;
  children: unknown;
}

const { imageUrl } = Astro.props;

const bgVar = `url(${imageUrl})`;
---

<header class:list={[`hero-img bg-center bg-no-repeat bg-cover`, "h-96"]}>
  <slot />
</header>

<style define:vars={{ bgVar }}>
  .hero-img {
    height: 300px;
    background-image: var(--bgVar);
  }
</style>
