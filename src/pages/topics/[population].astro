---
import PopulationRootCategoryPage from "@ui/orchestrators/PopulationRootCategoryPage.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const populationEntries = await getCollection("populations");

  const staticPaths = [];

  for (const populationEntry of populationEntries) {
    staticPaths.push({
      params: {
        population: populationEntry.data.slug,
      },
      props: {
        populationEntry,
      },
    });
  }

  return staticPaths;
}

const { populationEntry } = Astro.props;
---

<PopulationRootCategoryPage
  categoryId="09c006f0-48ee-4ca2-b069-d445f9ca9803"
  populationId={populationEntry.id}
/>
