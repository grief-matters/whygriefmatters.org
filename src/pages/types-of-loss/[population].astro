---
import { getCollection } from "astro:content";

import PopulationRootCategoryPage from "@ui/composite/content-linked/page-assemblies/PopulationRootCategoryPage.astro";

export async function getStaticPaths() {
  const populationEntries = await getCollection("populations");

  const staticPaths = [];

  for (const populationEntry of populationEntries) {
    staticPaths.push({
      params: {
        population: populationEntry.data.slug,
      },
      props: {
        populationEntry,
      },
    });
  }

  return staticPaths;
}

const { populationEntry } = Astro.props;
---

<PopulationRootCategoryPage
  categoryId="95e45462-a8a7-48cb-882d-407422534681"
  populationId={populationEntry.id}
  leadInContentBlockRefs={["7c9a56bc-3f17-44a4-adc6-f712643cc1ab"]}
/>
