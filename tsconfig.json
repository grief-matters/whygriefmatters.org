{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content-collections/*"],
      "@layouts/*": ["src/layouts/*"],
      "@model/*": ["src/model/*"],
      "@ui/*": ["src/ui/*"]
    }
  }
}
