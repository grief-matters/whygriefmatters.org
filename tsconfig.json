{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@content/*": ["./src/content/*"],
      "@server/*": ["./src/server/*"],
      "@styles/*": ["./src/styles/*"],
      "@ui/*": ["./src/ui/*"],
      "@sanity-integration/*": ["./src/integrations/sanity/*"]
    }
  }
}
